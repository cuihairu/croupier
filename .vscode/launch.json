{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Server (dev sqlite)",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/services/server",
      "args": ["-f", "etc/server.yaml"],
      "env": {
        "CROUPIER_DEV_SEED": "1"
      },
      "buildFlags": ["-tags=pg sqlite"],
      "cwd": "${workspaceFolder}/services/server"
    },
    {
      "name": "Server (postgres)",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/services/server",
      "args": ["-f", "etc/server.yaml"],
      "env": {
        "DB_DRIVER": "postgres",
        "DATABASE_URL": "postgres://croupier:croupier_dev_password@localhost:5432/croupier?sslmode=disable",
        "REDIS_URL": "redis://localhost:6379/0",
        "CLICKHOUSE_DSN": "clickhouse://localhost:9000/analytics"
      },
      "buildFlags": ["-tags=pg sqlite"],
      "cwd": "${workspaceFolder}/services/server"
    },
    {
      "name": "Edge (dev)",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/services/edge",
      "args": ["-f", "etc/edge.yaml"],
      "buildFlags": ["-tags=pg sqlite"],
      "cwd": "${workspaceFolder}/services/edge"
    },
    {
      "name": "Agent (dev)",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/services/agent",
      "args": ["-f", "etc/agent.yaml"],
      "env": {},
      "cwd": "${workspaceFolder}/services/agent"
    },
    {
      "name": "Analytics Worker",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/analytics-worker",
      "env": {
        "REDIS_URL": "redis://localhost:6379/0",
        "CLICKHOUSE_DSN": "clickhouse://localhost:9000/analytics"
      },
      "buildFlags": ["-tags=pg sqlite"],
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Dashboard (pnpm start)",
      "type": "pwa-node",
      "request": "launch",
      "cwd": "${workspaceFolder}/dashboard",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["start"],
      "env": { "UMI_ENV": "dev", "REACT_APP_ENV": "dev", "MOCK": "none" },
      "console": "integratedTerminal"
    }
  ],
  "compounds": [
    {
      "name": "Server + Dashboard",
      "configurations": ["Server (dev sqlite)", "Dashboard (pnpm start)"]
    }
  ]
}
