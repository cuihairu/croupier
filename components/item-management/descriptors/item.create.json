{
  "id": "item.create",
  "version": "1.0.0",
  "name": "Create Item Template",
  "description": "Create a new item template",
  "category": "item",
  "params": {
    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "minLength": 1,
        "maxLength": 100,
        "description": "Item name"
      },
      "type": {
        "type": "string",
        "enum": ["weapon", "armor", "consumable", "material", "quest", "currency"],
        "description": "Item type"
      },
      "rarity": {
        "type": "string",
        "enum": ["common", "uncommon", "rare", "epic", "legendary"],
        "description": "Item rarity"
      },
      "description": {
        "type": "string",
        "maxLength": 500,
        "description": "Item description"
      },
      "properties": {
        "type": "object",
        "description": "Item-specific properties (stats, effects, etc.)"
      },
      "stackable": {
        "type": "boolean",
        "default": true,
        "description": "Whether item can be stacked"
      },
      "max_stack": {
        "type": "integer",
        "minimum": 1,
        "maximum": 999,
        "default": 99,
        "description": "Maximum stack size"
      },
      "tradeable": {
        "type": "boolean",
        "default": true,
        "description": "Whether item can be traded"
      },
      "icon": {
        "type": "string",
        "description": "Item icon URL or identifier"
      }
    },
    "required": ["name", "type", "rarity"]
  },
  "result": {
    "type": "object",
    "properties": {
      "item_id": {
        "type": "string",
        "description": "Generated item ID"
      },
      "status": {
        "type": "string",
        "enum": ["success", "duplicate_name", "invalid_data"],
        "description": "Creation status"
      },
      "created_at": {
        "type": "string",
        "format": "date-time",
        "description": "Creation timestamp"
      }
    }
  },
  "auth": {
    "permission": "item:create",
    "allow_if": "has_role('gm') || has_role('admin')"
  },
  "semantics": {
    "idempotent": true,
    "rate_limit": "10rps",
    "timeout": "15s"
  }
}