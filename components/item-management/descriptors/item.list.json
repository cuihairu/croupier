{
  "id": "item.list",
  "version": "1.0.0",
  "name": "List Items",
  "description": "Get paginated list of item templates",
  "category": "item",
  "params": {
    "type": "object",
    "properties": {
      "page": {
        "type": "integer",
        "minimum": 1,
        "default": 1,
        "description": "Page number"
      },
      "size": {
        "type": "integer",
        "minimum": 1,
        "maximum": 100,
        "default": 20,
        "description": "Page size"
      },
      "search": {
        "type": "string",
        "description": "Search item name"
      },
      "type": {
        "type": "string",
        "enum": ["weapon", "armor", "consumable", "material", "quest", "currency"],
        "description": "Filter by item type"
      },
      "rarity": {
        "type": "string",
        "enum": ["common", "uncommon", "rare", "epic", "legendary"],
        "description": "Filter by rarity"
      },
      "sort": {
        "type": "string",
        "enum": ["created_at", "name", "type", "rarity"],
        "default": "created_at",
        "description": "Sort field"
      },
      "order": {
        "type": "string",
        "enum": ["asc", "desc"],
        "default": "desc",
        "description": "Sort order"
      }
    }
  },
  "result": {
    "type": "object",
    "properties": {
      "items": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "item_id": {
              "type": "string"
            },
            "name": {
              "type": "string"
            },
            "type": {
              "type": "string"
            },
            "rarity": {
              "type": "string"
            },
            "description": {
              "type": "string"
            },
            "stackable": {
              "type": "boolean"
            },
            "max_stack": {
              "type": "integer"
            },
            "tradeable": {
              "type": "boolean"
            },
            "icon": {
              "type": "string"
            },
            "created_at": {
              "type": "string",
              "format": "date-time"
            }
          }
        }
      },
      "total": {
        "type": "integer",
        "description": "Total number of items"
      },
      "page": {
        "type": "integer",
        "description": "Current page number"
      },
      "size": {
        "type": "integer",
        "description": "Current page size"
      },
      "total_pages": {
        "type": "integer",
        "description": "Total number of pages"
      }
    }
  },
  "auth": {
    "permission": "item:read",
    "allow_if": "has_role('gm') || has_role('admin')"
  },
  "semantics": {
    "idempotent": true,
    "rate_limit": "30rps",
    "timeout": "10s",
    "cacheable": true,
    "cache_ttl": "5m"
  }
}