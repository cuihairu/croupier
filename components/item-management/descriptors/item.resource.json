{
  "id": "item.resource",
  "version": "1.0.0",
  "name": "Item Resource Management",
  "description": "Complete CRUD operations for item management",
  "category": "item",
  "type": "resource",
  "entity": {
    "name": "item",
    "label": "物品",
    "primary_key": "item_id",
    "display_field": "name"
  },
  "operations": {
    "create": {
      "function": "item.create",
      "label": "创建物品",
      "icon": "PlusOutlined"
    },
    "read": {
      "function": "item.get",
      "label": "查看详情",
      "icon": "EyeOutlined"
    },
    "update": {
      "function": "item.update",
      "label": "编辑物品",
      "icon": "EditOutlined"
    },
    "delete": {
      "function": "item.delete",
      "label": "删除物品",
      "icon": "DeleteOutlined",
      "danger": true
    },
    "list": {
      "function": "item.list",
      "label": "物品列表",
      "icon": "TableOutlined"
    }
  },
  "ui": {
    "type": "pro-table",
    "layout": "table",
    "columns": [
      {
        "dataIndex": "item_id",
        "title": "物品ID",
        "width": 100,
        "fixed": "left"
      },
      {
        "dataIndex": "name",
        "title": "物品名称",
        "width": 150,
        "searchable": true
      },
      {
        "dataIndex": "type",
        "title": "类型",
        "width": 100,
        "filterable": true
      },
      {
        "dataIndex": "rarity",
        "title": "稀有度",
        "width": 100,
        "filterable": true,
        "render": "rarity_badge"
      },
      {
        "dataIndex": "description",
        "title": "描述",
        "width": 200,
        "ellipsis": true
      },
      {
        "dataIndex": "stackable",
        "title": "可堆叠",
        "width": 80,
        "render": "boolean_icon"
      },
      {
        "dataIndex": "tradeable",
        "title": "可交易",
        "width": 80,
        "render": "boolean_icon"
      },
      {
        "dataIndex": "created_at",
        "title": "创建时间",
        "width": 150,
        "render": "datetime"
      }
    ],
    "actions": {
      "toolbar": ["create"],
      "row": ["read", "update", "delete"]
    },
    "features": {
      "searchable": true,
      "pagination": true,
      "sortable": true,
      "filterable": true,
      "exportable": true
    },
    "batch_operations": ["delete"]
  },
  "auth": {
    "permission": "item:manage",
    "allow_if": "has_role('gm') || has_role('admin')"
  },
  "semantics": {
    "cacheable": true,
    "cache_ttl": "10m"
  }
}