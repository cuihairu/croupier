{
  "id": "player.list",
  "version": "1.0.0",
  "name": "List Players",
  "description": "Get paginated list of players",
  "category": "player",
  "params": {
    "type": "object",
    "properties": {
      "page": {
        "type": "integer",
        "minimum": 1,
        "default": 1,
        "description": "Page number"
      },
      "size": {
        "type": "integer",
        "minimum": 1,
        "maximum": 100,
        "default": 20,
        "description": "Page size"
      },
      "search": {
        "type": "string",
        "description": "Search username or nickname"
      },
      "region": {
        "type": "string",
        "enum": ["CN", "US", "EU", "JP", "KR", "SEA"],
        "description": "Filter by region"
      },
      "status": {
        "type": "string",
        "enum": ["active", "banned", "suspended"],
        "description": "Filter by status"
      },
      "sort": {
        "type": "string",
        "enum": ["created_at", "last_login", "level", "username"],
        "default": "created_at",
        "description": "Sort field"
      },
      "order": {
        "type": "string",
        "enum": ["asc", "desc"],
        "default": "desc",
        "description": "Sort order"
      }
    }
  },
  "result": {
    "type": "object",
    "properties": {
      "players": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "player_id": {
              "type": "string"
            },
            "username": {
              "type": "string"
            },
            "nickname": {
              "type": "string"
            },
            "email": {
              "type": "string"
            },
            "region": {
              "type": "string"
            },
            "status": {
              "type": "string"
            },
            "level": {
              "type": "integer"
            },
            "experience": {
              "type": "integer"
            },
            "created_at": {
              "type": "string",
              "format": "date-time"
            },
            "last_login": {
              "type": "string",
              "format": "date-time"
            }
          }
        }
      },
      "total": {
        "type": "integer",
        "description": "Total number of players"
      },
      "page": {
        "type": "integer",
        "description": "Current page number"
      },
      "size": {
        "type": "integer",
        "description": "Current page size"
      },
      "total_pages": {
        "type": "integer",
        "description": "Total number of pages"
      }
    }
  },
  "auth": {
    "permission": "player:read",
    "allow_if": "has_role('gm') || has_role('admin') || has_role('cs')"
  },
  "semantics": {
    "idempotent": true,
    "rate_limit": "30rps",
    "timeout": "10s",
    "cacheable": true,
    "cache_ttl": "30s"
  }
}